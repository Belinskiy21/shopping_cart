<p id="notice"><%= notice %></p>
<% unless user_signed_in? %>
<%= link_to 'Sign in', shopping_cart.new_user_session_path %>&nbsp;&nbsp;
<%= link_to 'Sign up', shopping_cart.new_user_registration_path %>
<% end %>
<% if user_signed_in? %>
<%= "User: #{current_user.email.split('@').first}" %>&nbsp;
<%= button_to 'Log out', shopping_cart.destroy_user_session_path, method: :delete %>
<% end %>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Show', product if can? :read, product %></td>
      <% if user_signed_in? %>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      <td><%= button_to 'Add to cart', shopping_cart.order_items_path(order_item: {quantity: 1, product_id: product.id}), method: :post %></td>
      <% end %>

    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create , Product %>
<%= link_to 'New Product', new_product_path %>
<% end %>
