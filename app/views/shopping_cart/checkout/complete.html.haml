%main.container.general-main-wrap
  %h1.general-title-margin= t('checkout')
  = render 'steps'
  .text-center.mb-40
    %h3.general-subtitle= t('thanks')
    %p.fw-300= t('has_been_sent_to') + current_user.email
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= sharp_number
        %p.general-address.mb-30= @order.created_at
      = render 'shopping_cart/checkout/addresses_short', address: @order.shipping
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= sharp_number
      %p.general-address.mb-30= @order.created_at
  = render 'shopping_cart/checkout/list_of_items', current_order: @order
  .text-center.general-text-right
    %p.in-gold-500.font-18= t('summary')
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'shopping_cart/shared/checkout_summary_numbers', current_order: @order
  .text-center
    = link_to t('back_to_store'), next_wizard_path, class: 'btn btn-default mb-20'
