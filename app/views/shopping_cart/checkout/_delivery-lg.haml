%table.table.table-hover
  %thead
    %tr
      %th.col-method
        %span.in-grey-600.ml-40= t('method')
      %th
        %span.in-grey-600= t('min_days')
      %th
        %span.in-grey-600= t('max_days')
      %th
        %span.in-grey-600= t('price')
  %tbody
    = f.collection_radio_buttons :shipping_method_id, @shipping_methods, :id, :name do |b|
      %tr
        %td
          .form-group.radio.mt-0.mb-0
            = b.label(class: 'radio-label') do
              = b.radio_button(class: 'radio-input')
              %span.radio-icon
              %span.radio-text= b.text
        %td
          %span= b.object.min_days
        %td
          %span= b.object.max_days
        %td
          %span.font-16.in-gold-500= number_to_currency b.object.price
